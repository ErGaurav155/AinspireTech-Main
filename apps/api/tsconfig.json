{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ainspiretech/*": ["../../packages/*/src", "../../packages/*"]
    }
  },
  "include": [
    "src/**/*",
    "../../packages/**/*.ts",
    "../dashboard/lib/utils.ts",
    "src/services",
    "../../packages/ui/components/radix/use-toast.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
